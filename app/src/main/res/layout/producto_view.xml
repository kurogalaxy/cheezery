<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/caramelfrap"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/producto_nombre"
            android:textColor="@color/nombreProducto"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:text="Nico Nico Nii"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/producto_desc"
            android:textSize="10sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/descProducto"
            android:text="Anato no haato nico nico nii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/producto_precio"
        android:text="$9"
        android:textSize="19sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="@color/precioProducto"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</LinearLayout>